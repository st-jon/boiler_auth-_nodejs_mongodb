<body>
  <form action="/register" method="post" class="form">
    <div class="container">
        <div class="form-group">
            <input class="input" type="text" name="username" id="username" placeholder="username" autocomplete="off"/>
            <label for="username" class="animated-label">username</label>
        </div>
        <div class="form-group">
            <input class="input" type="text" name="firstname" id="firstname" placeholder="First Name" autocomplete="off"/>
            <label for="firstname" class="animated-label">firstname</label>
        </div>
        <div class="form-group">
            <input class="input" type="text" name="lastname" id="lastname" placeholder="Last Name" autocomplete="off"/>
            <label for="lastname" class="animated-label">lastname</label>
        </div>
        <div class="form-group">
            <input class="input" type="text" name="email" id="email" placeholder="Email" autocomplete="off"/>
            <label for="email" class="animated-label">email</label>
        </div>
        <div class="form-group">
            <input class="input" type="password" name="password" id="password" placeholder="Password" autocomplete="off"/>
            <label for="password" class="animated-label">password</label>
        </div>
        <div class="form-group">
            <input class="input" type="password" name="confirm" id="confirm" placeholder="Confirm Password" autocomplete="off"/>
            <label for="confirm" class="animated-label">confirm</label>
        </div>
        {{#if message}}
            <div class="alert alert-danger">{{message}}</div>
        {{/if}}
        <div>
            <input type="submit" class="btn" value="Register"/>
        </div>
    </div>  
  </form> 
</body>
</html>